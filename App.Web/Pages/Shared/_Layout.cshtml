<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App.Web</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="main-nav">
            <div class="nav-brand">
                <a asp-area="" asp-page="/Index">BlogApp</a>
            </div>
            <ul class="nav-links">
                <li><a asp-area="" asp-page="/Index">Home</a></li>
                <li><a asp-area="" asp-page="/Articles">Articles</a></li>
                <li><a asp-area="" asp-page="/Privacy">Privacy</a></li>
            </ul>
        </nav>
    </header>
    <main class="main-content">
        @RenderBody()
    </main>
    <footer class="site-footer">
        <div>
            &copy; 2025 - BlogApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
        <div class="footer-links">
            <a href="https://github.com/yourusername" target="_blank" rel="noopener">GitHub</a>
            <a href="mailto:your@email.com">Contact</a>
            <a href="#">Back to top</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
